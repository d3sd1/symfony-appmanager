{% extends 'base.html.twig' %}

{% block title %}CRUD Servicios{% endblock %}
{% block stylesheets %}
    <link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.css" rel="stylesheet"/>
    <link href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.css"
          rel="stylesheet"/>
    <style>
        .dataTables_length {
            margin-top: 20px
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.2/moment.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css"
          href="https://cdn.datatables.net/rowreorder/1.2.5/css/rowReorder.dataTables.min.css">
    <link rel="stylesheet" type="text/css"
          href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css">
    <script type="text/javascript" charset="utf8"
            src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script type="text/javascript"
            src="https://cdn.datatables.net/rowreorder/1.2.5/js/dataTables.rowReorder.min.js"></script>
    <script type="text/javascript"
            src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#servicios').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
                },
                rowReorder: {
                    selector: 'td:nth-child(2)'
                },
                responsive: true,
                "processing": true,
                "serverSide": true,
                "order": [],
                "searching": false,
                "ajax": {
                    url: "/services_fetch_workers_table/{{ serviceId }}",
                    type: "POST",
                    /*data: {
                        filter_gender: filter_gender, filter_country: filter_country
                    }*/
                }
            });
        });
    </script>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h1 class="text-center">Datos generales</h1>
                <ul class="list-group col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Código:
                        <span class="badge badge-primary badge-pill">{{ servicio['codigo'] }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Fecha:
                        <span class="badge badge-primary badge-pill">{{ servicio['fecha'] }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Presupuesto:
                        <span class="badge badge-primary badge-pill">{{ servicio['presupuesto'] }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Evento al que pertenece:
                        <span class="badge badge-primary badge-pill">{{ servicio['evento'] }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Estado:
                        <span class="badge badge-primary badge-pill">{{ servicio['estado'] }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Horario:
                        <span class="badge badge-primary badge-pill">{{ servicio['horario'] }}</span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <!--<h1 class="text-center">Datos extra</h1>
                <ul class="list-group col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Código:
                        <span class="badge badge-primary badge-pill">14</span>
                    </li>
                </ul>-->
                TODO: determinar que poner aquí
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="container-fluid">
                    <div class="table-wrapper">
                        <div class="table-title">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h2 style="text-align:center"><b>Personal</b></h2>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive" class="col-12 col-md-10 col-lg-8">
                            <table class="display nowrap" style="width:100%" id="servicios">
                                <thead>
                                <tr>
                                    <th>DNI</th>
                                    <th>Nombre completo</th>
                                    <th>Email</th>
                                    <th>Sexo</th>
                                    <th>Cargos</th>
                                </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
