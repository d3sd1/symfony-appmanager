{% extends 'base.html.twig' %}

{% block title %}CRUD Servicios{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h1 class="text-center">Datos generales</h1>
                <ul class="list-group col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Código:
                        <span class="badge badge-primary badge-pill">14</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Fecha:
                        <span class="badge badge-primary badge-pill">2</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Presupuesto (OPT):
                        <span class="badge badge-primary badge-pill">1</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Evento al que pertenece:
                        <span class="badge badge-primary badge-pill">1</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Estado:
                        <span class="badge badge-primary badge-pill">1</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Horario:
                        <span class="badge badge-primary badge-pill">1</span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h1 class="text-center">Datos extra</h1>
                <ul class="list-group col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Código:
                        <span class="badge badge-primary badge-pill">14</span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h1 class="text-center">Personal</h1>

                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Nombre de usuario</th>
                        <th scope="col">Categoría laboral</th>
                        <th scope="col">Horarios del trabajador</th>
                        <th scope="col">Móvil</th>
                        <th scope="col">Rutas del servicio</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>@mdo</td>
                        <td>@mdo</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
